<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/Violet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink2"
            android:gravity="center"
            android:padding="12dp"
            android:text="Diaglog Update"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/edt_updatetitlediary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="new title"
            android:padding="12dp">

        </TextView>

        <EditText
            android:id="@+id/edt_updatecontentdiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="new content"
            android:padding="12dp">

        </EditText>

<!--        <EditText-->
<!--            android:id="@+id/edt_updatedatediary"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:hint="new date"-->
<!--            android:padding="12dp">-->

<!--        </EditText>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy">

            </Button>

            <Button
                android:id="@+id/btnUpdateDiary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cập nhật">

            </Button>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>